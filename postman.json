						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"question\": \"talk me about 3 stoic principles\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{API_URL}}/api/v1/summary/interrogate/vector/SljXqzSr",
